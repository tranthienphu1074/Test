@model Test.Models.DanhMuc
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Default.cshtml";
}

<h2>Màn hình sửa sản phẩm</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Tên sản phẩm:</td>
            <td>@Html.TextBoxFor(m =>m.TenSanPham)</td>
        </tr>
        <tr>
            <td>Giá tiền:</td>
            <td>@Html.TextBoxFor(m =>m.GiaTien)</td>
        </tr>
        <tr>
            <td>Hãng:</td>
            <td>@Html.TextBoxFor(m =>m.Hang)</td>
        </tr>
        <tr>
            <td>Ảnh:</td>
            <td>@Html.TextBoxFor(m =>m.Image)</td>
        </tr>
        <tr>
            <td>Thông tin:</td>
            <td>@Html.TextBoxFor(m =>m.Description)</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Update" value="Sửa" />@Html.ActionLink("         Quay lại trang chủ", "Default", "Default")</td>
        </tr>
    </table>
}

